<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
 
 <!-- 加载spring容器 -->
<context-param>
	<param-name>contextConfigLocation</param-name>
	<param-value>/WEB-INF/classes/spring/applicationContext-*.xml</param-value>
</context-param>
<listener>
	<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
</listener>

 <!-- Spring前端控制器的配置 -->
  <servlet>
  	<servlet-name>Springmvc</servlet-name>
  	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  	<!-- 配置加载的配置文件（配置处理器映射器、适配器等等） -->
  	<init-param>
  		<param-name>contextConfigLocation</param-name>
  		<param-value>classpath:spring/springmvc.xml</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Springmvc</servlet-name>
  	<url-pattern>*.action</url-pattern>
  </servlet-mapping>
<!-- 配置登陆过滤器 -->
<servlet>
  	<servlet-name>testJson</servlet-name>
  	<servlet-class>controller.testJson</servlet-class>
  </servlet>
<servlet-mapping>
  	<servlet-name>testJson</servlet-name>
  	<url-pattern>/testJson</url-pattern>
</servlet-mapping>
	<filter>
        <filter-name>login</filter-name>
        <filter-class>filter.LoginFilter</filter-class>
    </filter>

    <!-- <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping> -->
    <filter>
        <filter-name>loginTeacher</filter-name>
        <filter-class>filter.LoginTeacherFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>loginTeacher</filter-name>
        <url-pattern>/teacher/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>loginStudent</filter-name>
        <filter-class>filter.LoginStudentFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>loginStudent</filter-name>
        <url-pattern>/student/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>loginBoss</filter-name>
        <filter-class>filter.LoginBossFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>loginBoss</filter-name>
        <url-pattern>/boss/*</url-pattern>
    </filter-mapping>
      <filter>
        <filter-name>Cors</filter-name>
        <filter-class>filter.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Cors</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>